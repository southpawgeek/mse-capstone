{{>header}}
    <section>
        <h2>Asset List</h2>
        <input id="asset-filter" type="text" placeholder="Start typing to filter..."/>
        <table id="assets">
            <thead>
                <th>Title</th>
                <th>ISBN</th>
                <th>Call Number</th>
            </thead>
            <tbody>
                {{#assets}}<tr id='asset-{{id}}' class='asset-item' data-asset-id='{{id}}'>
                <td>{{title}}</td>
                <td>{{isbn}}</td>
                <td>{{callNumber}}</td>
                {{/assets}}</tr>
            </tbody>
        </table>
    </section>

    <div id="full-modal" style="display:none;">
    <div id="full-modal-content">
        <button id="full-modal-close"><i class="fas fa-times"></i></button>
        <h3 id="asset-modal-title-data"><span id="asset-modal-title"></span></h3>
        <h4>ISBN: <span id="asset-modal-isbn"></span></h4>
        <h5 id="asset-modal-total-text">Total copies: <span id="asset-modal-total">X</span></h5>
        <ul id="asset-modal-copies">
        <li>?</li>
        </ul>    
    </div>
    </div>
{{>footer}}