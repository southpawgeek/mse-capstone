{{>header}}
    <section>
    <h2>Add New Asset</h2>
    <p id="message" style="display:none;"></p>
    <h3>Title *</h3>
    <input id="title" type="text" />
    <h3>ISBN *</h3>
    <input id="isbn" type="text" />
    <h3>Call Number *</h3>
    <input id="call-number" type="text" />
    <p class="tiny">* Required</p>
    <hr class="invis" />
    <button id="add-asset">Add Asset</button>
    </section>
    <section>
        <h2>Asset List</h2>
        <table id="assets">
            <thead>
                <th>Title</th>
                <th>ISBN</th>
                <th>Call Number</th>
            </thead>
            <tbody>
                {{#assets}}<tr>
                <td>{{title}}</td>
                <td>{{isbn}}</td>
                <td>{{callNumber}}</td>
                {{/assets}}</tr>
            </tbody>
        </table>
    </section>
{{>footer}}