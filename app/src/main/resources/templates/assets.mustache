{{>header}}
    {{#assets-page}}<section>
    <h2>Add New Asset</h2>
    <p id="message" style="display:none;"></p>
    <h3>Title *</h3>
    <input id="title" type="text" />
    <h3>ISBN *</h3>
    <input id="isbn" type="text" />
    <h3>Call Number *</h3>
    <input id="call-number" type="text" />
    <p class="tiny">* Required</p>
    <hr class="invis" />
    <button id="add-asset">Add Asset</button>
    </section>{{/assets-page}}
    <section>
        <h2>Asset List</h2>
        <table id="assets">
            <thead>
                <th>Title</th>
                <th>ISBN</th>
                <th>Call Number</th>
                {{#assets-page}}<th>Copies</th>{{/assets-page}}
            </thead>
            <tbody>
                {{#assets}}<tr id='asset-{{id}}'>
                <td>{{title}}</td>
                <td>{{isbn}}</td>
                <td>{{callNumber}}</td>
                {{#assets-page}}<td><span id="asset-total-{{id}}" class='asset-copies'>{{count.stats.total}}</span><button class="add-copy" value="{{id}}">+</button></td>{{/assets-page}}
                {{/assets}}</tr>
            </tbody>
        </table>
    </section>
{{>footer}}